nav-height = 70px

.navbar
    position: fixed
    width 100%
    height: nav-height
    padding: 0;
    background: rgba(255,255,255,0)
    transition: background .5s
    &.scrolled
        transition: all .5s
        background: white_transparent
    .navbar-brand
        position: relative
        top: -100%
        padding: .5rem 1rem
        height: 100%
        transition: top .3s ease-in-out
        &.scrolled
            top: 0
            transition: top .3s ease-in-out
        img
            height: 100%
    .landing-btn
        height: nav-height
        width: 300px;
        