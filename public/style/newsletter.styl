.newsletter-form > .email-input::before {
  opacity: 0;
  transition: opacity 2s;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  content: "Erfolg";
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: white;
  color: green;
  z-index: -1;
}
.newsletter-form.email-sent > .email-input::before {
  opacity: 1;
  z-index: 1;
}

.newsletter-form > .email-input {
  position: relative;
  display: inline-block;
}
