.card-icon
    background: ad-blue
    border-radius: 50%
    width: 150px
    height: 150px
    display: block
    margin: auto
    margin-bottom: 2rem
    position: relative
    .icon
        position: absolute
        top: 0;
        right: 0;
        left: 0;
        bottom: 0;
        margin: auto;
        font-size: 85px
        color: white
        display: inline-block
        width: 100%
        text-align: center
        padding: 15px 0
        &.secure-icon:before
            content: '\f3ed'
        &.exclusive-icon:before
            content: '\f3a5'
        &.success-icon:before
            content: '\f4c4'    