img
    max-width: 100%
    pointer-events: none;

button, a.btn
    cursor: pointer

.container
    margin-top: 5.5rem
    margin-bottom: 175px

.fullHeight
    height: 100%

.fullWidth
    width: 100%

hr.big
    border-top: 1px solid white

input[type=number]::-webkit-inner-spin-button, 
input[type=number]::-webkit-outer-spin-button
  -webkit-appearance: none

.price-container 
    position: fixed
    bottom: 0
    right: 0
    z-index: 995
    max-width: 200px
    a img
        width: 100%

a
    color: white
    outline: none
    text-transform: none
    text-decoration: none

    &:hover, &:active, &:focus
        outline: none
        color: lightgray
        text-decoration: none